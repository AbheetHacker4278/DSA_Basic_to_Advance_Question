#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int n = 11110011 , count = 0;
    while(n!=0){
        int rem = n%10;
        n /= 10;
        if (n != 1){
            n = n>>1;
            count++;
        }
    }
    cout<< count << endl;
}
