//find the number of 1 in the brinary number?


#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int n = 3;
    int cnt = 0;
    while(n!=0){
        if (n and 1 == 1){
            cnt++;
        }
        n = n>>1;
    }
    cout << cnt << endl;
}

